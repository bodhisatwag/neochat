<% include _includes/header %>
    <!-- Preloader -->
        <div id="preloader" >
            <div class="progress progress-indeterminate">
                <div class="bar"></div>
            </div>
        </div>
    <div class="container" ng-controller='AppCtrl'>
        <div class="row">
            <!-- Left Bar starts here -->
            <div class="span3 bs-docs-sidebar">
                <div class="alert alert-info" style = "margin-bottom: 0 !important;">
                    <h4>Online</h4>
                </div>
                <ul class= "nav nav-list bs-docs-sidenav affix well">
                    <li ng-repeat='user in users'>
                        <h4 class="media-heading"><a ng-click="mention(user)">{{user}}</a></h4>
                    </li>
                </ul>
            </div>

            <div class="span9" >
                <h3 class="label label-inverse">Messages</h3>
                <div class="well message-spot">
                    <p ng-repeat='message in messages' ng-class='message.me' class=''>
                        {{message.user}}: {{message.text}}
                    </p>
                </div>
            </div>
             
            <div class="span12">
                <form ng-submit='sendMessage()' class='well form-search form-send-message'>
                <input ng-model='message' class='span10 input-message' placeholder='Message'>
                <input type='submit' value='Send' class='btn btn-success' style='margin-left: 10px; margin-top: 0'>
                </form>
            </div>       
            <!--<div class="span2">
                <h3>Users</h3>
                <div class="well">
                    <ul class="nav nav-list">
                        <li ng-repeat='user in users'> 
                            <a ng-click="mention(user)">{{user}}</a>
                        </li>
                    </ul>
                </div>
            </div>-->
        </div>

    <div id="changeNameModal" class="modal hide fade" tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true'>
        <div class="modal-body">
            <h3>Change your name</h3>
            <p>
                Your current user name is {{name}}
                <form ng-submit='changeName()'>
                    <input ng-model='newName'>
                    <input type='submit' value='Change Name' class='btn btn-success' style='margin-left: 10px;'>
                    <a data-dismiss='modal' class='btn btn-danger' style='margin-left: 10px'>Nevermind</a>
                </form>
            </p>
        </div>
    </div>

    <div id="infoModal" class="modal hide fade" tabindex='-1' role='dialog' aria-labelledby='infoModal' aria-hidden='true'>
        <div class="modal-body">
            <h3>AngularJS + Socket.IO + NodeJS Chat</h3>
            <p>
                <a href='https://github.com/hugodias/angularjs-socket-node-chat' target='_blank'>Github</a>
            </p>
        </div>
    </div>

<!--Settings Nav -->
<div id="charms" class="win-ui-dark slide">
   
      <div id="theme-charms-section" class="charms-section">
         <div class="charms-header">
            <a href="#" class="close-charms win-backbutton"></a>
            <h2>Settings</h2>
         </div>
   
         <div class="row-fluid">
            <div class="span12">
   
               <form class="">
                  <label for="win-theme-select">Change theme:</label>
                  <select id="win-theme-select" class="">
                     <option value="metro-ui-light">Light</option>
                     <option value="metro-ui-dark">Dark</option>
                  </select>
               </form>
   
            </div>
         </div>
      </div>
   
   </div>

<% include _includes/footer %>