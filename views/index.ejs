<% include _includes/header %>
    <!-- Preloader -->
        <div id="preloader" style="padding: 200px 0 0 400px;">
            <div class="progress progress-indeterminate">
                <div class="bar"></div>
            </div>
        </div>
    <div class="container" ng-controller='AppCtrl'>
        <div class="row" style="height: 500px">
            <!-- Left Bar starts here -->
            <div class="span3 bs-docs-sidebar">
                <div class="alert alert-info" style = "margin-bottom: 0;">
                    <h4>Online</h4>
                </div>
                <ul class= "nav nav-list bs-docs-sidenav affix" style = "margin: 0;">
                    <li ng-repeat='user in users'>
                        <a ng-click="mention(user)"><i class="icon-chevron-right"></i>{{user}}</a>
                    </li>
                </ul>
            </div>

            <div class="span9" >
                <h3 class="label label-inverse">Messages</h3>
                <div class="well message-spot" style="max-height: 400px; overflow:none">
                    <p ng-repeat='message in messages' ng-class='message.me' class=''>
                        {{message.user}}: {{message.text}}
                    </p>
                </div>
            </div>
             
            <div class="span9 pull-right">
                <form ng-submit='sendMessage()' class='well form-search form-send-message'>
                <input ng-model='message' class='span7 input-message' placeholder='Message'>
                <input type='submit' value='Send' class='btn btn-success' style='margin-left: 10px; margin-top: 0'>
                </form>
            </div>       
            <!--<div class="span2">
                <h3>Users</h3>
                <div class="well">
                    <ul class="nav nav-list">
                        <li ng-repeat='user in users'> 
                            <a ng-click="mention(user)">{{user}}</a>
                        </li>
                    </ul>
                </div>
            </div>-->
            <div id="home-tiles" class="container-fluid metro-responsive-tiles" >
                <div class="row-fluid" style="margin: 15px;">
                    <div class="span4">
                        <a class="tile wide imagetext bg-color-orange first" href="https://github.com/bodhisatwag/neochat">
                            <div class="image-wrapper">
                                <span class="icon icon-github"></span>
                            </div>
                            <div class="column-text">
                                <div class="text-header2">View project on GitHub</div>
                                <div class="text4">
                                    <iframe class="github-btn" src="http://ghbtns.com/github-btn.html?user=aozora&repo=bootmetro&type=watch&count=true" allowtransparency="true" frameborder="0" scrolling="0" width="100px" height="20px"></iframe>
                                    <iframe class="github-btn" src="http://ghbtns.com/github-btn.html?user=aozora&repo=bootmetro&type=fork&count=true" allowtransparency="true" frameborder="0" scrolling="0" width="98px" height="20px"></iframe>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="span4">
                        <a class="tile wide imagetext bg-color-green middle" href="http://neochat.nodejitsu.com/" target="_blank">
                            <div class="image-wrapper">
                                <span class="icon icon-grid-view"></span>
                            </div>
                            <div class="column-text">
                                <div class="text-header3">View the Demo online</div>
                            </div>
                        </a>
                    </div>
                    <div class="span4 pull-right">
                        <a class="tile wide imagetext bg-color-blueDark middle" data-toggle='modal' href='#infoModal'>
                            <div class="image-wrapper">
                                <span class="icon icon-info"></span>
                            </div>
                            <div class="column-text">
                                <div class="text-header3">About &amp; Credits</div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <div>
    <div id="changeNameModal" class="modal hide fade" tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true'>
        <div class="modal-body">
            <h3>Change your name</h3>
            <p>
                Your current user name is {{name}}
                <form ng-submit='changeName()'>
                    <input ng-model='newName'>
                    <input type='submit' value='Change Name' class='btn btn-success' style='margin-left: 10px;'>
                    <a data-dismiss='modal' class='btn btn-danger' style='margin-left: 10px'>Nevermind</a>
                </form>
            </p>
        </div>
    </div>

    <div id="infoModal" class="modal hide fade" tabindex='-1' role='dialog' aria-labelledby='infoModal' aria-hidden='true'>
        <div class="modal-body">
            <h3>AngularJS + Socket.IO + NodeJS Chat</h3>
            <p>
                <a href='https://github.com/hugodias/angularjs-socket-node-chat' target='_blank'>Github</a>
            </p>
        </div>
    </div>
<% include _includes/footer %>